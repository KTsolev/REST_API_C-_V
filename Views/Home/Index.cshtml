<div id="body">
<span class="text">Search By Name:</span><input id="name" type="text" name="searchByName" placeholder="Search By Name..."/>
<span class="text">Search By Surname:</span><input id="surname" type="text" name="searchBySurName" placeholder="Search By Sursnme..." />
<div id="detailView"></div>
<table id="employees">
    <tr>
        <th class="ths">ID</th>
        <th class="ths">Title</th>
        <th class="ths">Name</th>
        <th class="ths">Surname</th>
        <th class="ths">Salary</th>
        <th class="ths">Income Tax</th>
        <th class="ths">National Insurance</th>
        <th class="ths">Home Take</th>
        <th class="ths">Actions</th>
    </tr>
</table>
</div>
@section scripts{
    <script type="text/javascript">
       $(document).ready(function ()
       {           
            $.getJSON('/api/employee', function (contactsJsonPayload)
            {
                Render(contactsJsonPayload);
            });
            $("#name").keyup(function ()
            {
                var value = $(this).val();
                var textField = $(this).attr("name");
                var url = '/api/employee?name=' + value + '&textField=' + textField;
                QueryTheApi(url);
                
            });
            $("#surname").keyup(function () {
                var value = $(this).val();
                var textField = $(this).attr("name");
                var url = '/api/employee?name=' + value + '&textField=' + textField;
                QueryTheApi(url);
            });
       });
</script>
}